
@model LoginViewModel


<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>


<body>
    <div class="login-page">
        <div class="lead">
            <h1>消防設備管理服務</h1>

        </div>

        <partial name="_ValidationSummary" />

        <div class="row">


            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>本地帳號登入</h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="form-control" placeholder="Username" asp-for="Username" autofocus autocomplete="off">

                                <span asp-validation-for="Username"></span>


                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">

                                <span asp-validation-for="Password"></span>

                            </div>



                            <button class="btn btn-primary" name="button" value="login">登入</button>
                            <button class="btn btn-primary" name="button1" formnovalidate value="cancel">返回</button>
                        </form>

                    </div>
                </div>
            </div>


        </div>
    </div>
</body>



</html>


